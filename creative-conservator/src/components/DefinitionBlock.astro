  term?: string;
  pronunciation?: string;
  partOfSpeech?: string;
  meaning?: string;
}

const {
  term = brandDefinition.term,
  pronunciation = brandDefinition.pronunciation,
  partOfSpeech = brandDefinition.partOfSpeech,
  meaning = brandDefinition.meaning,
