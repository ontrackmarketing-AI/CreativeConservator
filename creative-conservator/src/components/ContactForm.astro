---
import { services } from '../data/services';
---

<form class="contact-form" data-contact-form>
  <div class="form-group form-group-underline">
    <label for="name" class="form-label">Name *</label>
    <input
      type="text"
      id="name"
      name="name"
      class="form-input"
      placeholder="Your full name"
      required
    />
  </div>

  <div class="form-group form-group-underline">
    <label for="email" class="form-label">Email *</label>
    <input
      type="email"
      id="email"
      name="email"
      class="form-input"
      placeholder="your@email.com"
      required
    />
  </div>

  <div class="form-group form-group-underline">
    <label for="company" class="form-label">Company</label>
    <input
      type="text"
      id="company"
      name="company"
      class="form-input"
      placeholder="Your company name (optional)"
    />
  </div>

  <div class="form-group">
    <label class="form-label">Service Interest</label>
    <div class="checkbox-group">
      {services.map((service) => (
        <label class="checkbox-label">
          <input type="checkbox" name="service" value={service.id} />
          <span>{service.title}</span>
        </label>
      ))}
      <label class="checkbox-label">
        <input type="checkbox" name="service" value="not-sure" />
        <span>Not sure yet</span>
      </label>
    </div>
  </div>

  <div class="form-group">
    <label for="budget" class="form-label">Ideal Budget</label>
    <select id="budget" name="budget" class="form-select">
      <option value="">Select a budget range...</option>
      <option value="under-1000">Less than $1,000</option>
      <option value="1000-5000">$1,000 – $5,000</option>
      <option value="5000-10000">$5,000 – $10,000</option>
      <option value="10000-20000">$10,000 – $20,000</option>
    </select>
  </div>

  <div class="form-group form-group-underline">
    <label for="message" class="form-label">Message *</label>
    <textarea
      id="message"
      name="message"
      class="form-textarea"
      placeholder="Tell us about your project or how we can help..."
      required
    ></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Send Message</button>

  <div class="form-success mt-xl" data-form-success>
    <p><strong>Thank you!</strong></p>
    <p>Your message has been sent successfully. We'll get back to you soon.</p>
  </div>
</form>
