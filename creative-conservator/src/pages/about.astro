---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import DefinitionBlock from '../components/DefinitionBlock.astro';
import { founderBio, founderVision } from '../data/faqs';

const structuredData = [
  {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: [
      { '@type': 'ListItem', position: 1, name: 'Home', item: 'https://www.creativeconservator.com/' },
      { '@type': 'ListItem', position: 2, name: 'About' },
    ],
  },
  {
    '@context': 'https://schema.org',
    '@type': 'AboutPage',
    name: 'About The Creative Conservator',
    description: 'A modern creative marketing studio devoted to preserving the artistry at the heart of every brand.',
    mainEntity: {
      '@type': 'Person',
      name: 'Darya',
      description: founderBio.bio,
      jobTitle: 'Founder',
    },
  },
];
---

<BaseLayout
  title="About Us | The Creative Conservator"
  description="Learn about The Creative Conservator - a modern creative marketing studio founded by Darya, devoted to preserving the artistry at the heart of every brand."
  structuredData={structuredData}
  currentPath="/about"
>
  <!-- Hero -->
  <Hero
    eyebrow="About Us"
    title="The Art of Preserving Creative Expression"
    lead="Preserving the artistry at the heart of every brand."
    image="/images/hero/hero-elegant-interior-1920.jpg"
    imageAlt="Elegant interior representing refined brand aesthetics"
    variant="full-bleed"
    align="left"
  />

  <!-- Definition Block Section -->
  <section class="section">
    <div class="container-narrow">
      <DefinitionBlock />

      <div class="about-content mt-3xl" data-reveal="fade-up">
        <p class="body-lg">
          The Creative Conservator is a modern creative marketing studio devoted to preserving the artistry at the heart of every brand. We blend intentional strategy with refined content creation—photography, videography, social media, and storytelling—to shape identities that feel timeless, compelling, and unmistakably distinct.
        </p>
        <p class="body-lg mt-lg">
          Our work protects the essence of a brand while elevating how it's seen, heard, and remembered across every digital touchpoint. We don't just create content; we conserve creative expression and translate it into intelligent strategy that amplifies and sustains brand presence.
        </p>
      </div>

      <!-- Decorative circle -->
      <div class="decorative-circle" style="right: -15%; top: 10%;" aria-hidden="true"></div>
    </div>
  </section>

  <!-- Founder's Vision Board -->
  <section class="section section-cream">
    <div class="container">
      <header class="section-header text-center" data-reveal="fade-up">
        <h2>Our Purpose & Mission</h2>
        <div class="divider divider-center"></div>
      </header>

      <div class="vision-board" data-reveal="stagger-up">
        {founderVision.map((item, i) => (
          <div class:list={['vision-card', { 'vision-card--wide': i === 0, 'vision-card--tall': i === 4 }]}>
            <h3>{item.title}</h3>
            {item.body && <p>{item.body}</p>}
            {item.beliefs && (
              <ul class="vision-beliefs">
                {item.beliefs.map((belief) => (
                  <li>{belief}</li>
                ))}
              </ul>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Founder Section -->
  <section class="section section-cream">
    <div class="container">
      <div class="founder-grid">
        <div class="founder-image" data-reveal="scale-in">
          <div class="decorative-rect" aria-hidden="true"></div>
          <img
            src="/images/founder/founder-darya-creative-800.jpg"
            alt="Darya, Founder of The Creative Conservator"
            loading="lazy"
            decoding="async"
          />
        </div>
        <div class="founder-content" data-reveal="fade-left">
          <p class="eyebrow">The Founder</p>
          <h2>{founderBio.name}</h2>
          <div class="divider"></div>
          <p class="body-lg">{founderBio.bio}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section">
    <div class="container-narrow text-center" data-reveal="fade-up">
      <h2>Ready to Begin?</h2>
      <div class="divider divider-center"></div>
      <p class="lead">
        Let's discuss how we can preserve and elevate your brand.
      </p>
      <a href="/contact" class="btn btn-primary mt-xl" data-transition-link>
        Get in Touch
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .about-content {
    position: relative;
  }

  .founder-grid {
    display: grid;
    grid-template-columns: 40% 1fr;
    gap: var(--space-3xl);
    align-items: center;
  }

  .founder-image {
    position: relative;
  }

  .founder-image .decorative-rect {
    position: absolute;
    top: var(--space-xl);
    left: calc(-1 * var(--space-xl));
    width: 80%;
    height: 90%;
    z-index: 0;
  }

  .founder-image img {
    position: relative;
    z-index: 1;
    width: 100%;
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-lg);
  }

  .founder-content {
    padding-left: var(--space-xl);
  }

  /* ---- Bento grid ---- */
  .vision-board {
    display: grid;
    grid-template-columns: 3fr 2fr;
    grid-auto-rows: auto;
    gap: var(--space-lg);
  }

  /* Row 1: "Our Vision" spans full width */
  .vision-card--wide {
    grid-column: 1 / -1;
  }

  /* Row 2: "Why We Exist" (3fr) | "Our Approach" (2fr) — default flow */

  /* Row 3: "Who We Partner With" (3fr) | "What We Believe" (2fr) spans 2 rows */
  .vision-card--tall {
    grid-row: span 2;
  }

  .vision-card {
    background: #fff;
    padding: var(--space-xl);
    border-left: 4px solid var(--green);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-sm);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .vision-card--wide {
    text-align: center;
    border-left: none;
    border-bottom: 4px solid var(--green);
    padding: var(--space-2xl) var(--space-xl);
  }

  .vision-card h3 {
    font-family: var(--font-heading);
    color: var(--deep-red);
    margin-bottom: var(--space-sm);
  }

  .vision-card p {
    color: var(--vintage-wine);
    font-size: var(--text-body);
    line-height: var(--leading-relaxed);
  }

  .vision-card--wide p {
    max-width: 52ch;
    margin-inline: auto;
  }

  .vision-beliefs {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .vision-beliefs li {
    position: relative;
    padding-left: var(--space-lg);
    font-size: var(--text-body);
    line-height: var(--leading-relaxed);
    color: var(--vintage-wine);
  }

  .vision-beliefs li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.55em;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: var(--green);
  }

  @media (max-width: 768px) {
    .vision-board {
      grid-template-columns: 1fr;
    }

    .vision-card--wide {
      border-left: 4px solid var(--green);
      border-bottom: none;
      text-align: left;
      padding: var(--space-xl);
    }

    .vision-card--wide p {
      margin-inline: 0;
    }

    .vision-card--tall {
      grid-row: span 1;
    }

    .founder-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }

    .founder-image {
      max-width: 400px;
      margin: 0 auto;
    }

    .founder-content {
      padding-left: 0;
      text-align: center;
    }

    .founder-content .divider {
      margin-inline: auto;
    }
  }
</style>
