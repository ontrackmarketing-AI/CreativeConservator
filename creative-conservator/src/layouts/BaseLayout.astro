---
import SEO from '../components/SEO.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageTransition from '../components/PageTransition.astro';
import CustomCursor from '../components/CustomCursor.astro';
import ScrollProgress from '../components/ScrollProgress.astro';

import '../styles/fonts.css';
import '../styles/global.css';
import '../styles/animations.css';
import '../styles/effects.css';
import '../styles/components.css';

export interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  ogType?: 'website' | 'article';
  twitterDescription?: string;
  noindex?: boolean;
  structuredData?: object | object[];
  currentPath?: string;
  preloadImage?: string;
}

const {
  title,
  description,
  canonical,
  ogImage,
  ogType,
  twitterDescription,
  noindex,
  structuredData,
  currentPath,
  preloadImage,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

  {/* Preload LCP image for faster Largest Contentful Paint */}
  {preloadImage && (
    <link rel="preload" as="image" type="image/webp" href={preloadImage} fetchpriority="high" />
  )}

  <!-- Font preloads — self-hosted, no external dependency -->
  <link rel="preload" as="font" type="font/woff2" href="/fonts/UcCo3FwrK3iLTcviYwYZ8UA3.woff2" crossorigin />
  <link rel="preload" as="font" type="font/woff2" href="/fonts/TuGOUUFxWphYQ6YI6q9Xp61FQzxDRKmzr1lWfxlPCz4c.woff2" crossorigin />

  <!-- SEO Component -->
  <SEO
    title={title}
    description={description}
    canonical={canonical}
    ogImage={ogImage}
    ogType={ogType}
    twitterDescription={twitterDescription}
    noindex={noindex}
    structuredData={structuredData}
  />

  <!-- No-JS fallback: ensure data-reveal elements are visible without JS -->
  <noscript>
    <style>
      [data-reveal], [data-reveal] > * {
        opacity: 1 !important;
        transform: none !important;
        clip-path: none !important;
      }
    </style>
  </noscript>
</head>
<body>
  <!-- Scroll Progress Bar -->
  <ScrollProgress />

  <!-- Custom Cursor -->
  <CustomCursor />

  <!-- Page Transition Overlay -->
  <PageTransition />

  <!-- Header -->
  <Header currentPath={currentPath} />

  <!-- Main Content -->
  <main id="main-content">
    <slot />
  </main>

  <!-- Footer -->
  <Footer />

  <!-- Scripts — lazy-loaded to keep the main thread free for FCP/LCP -->
  <script>
    async function boot() {
      const [{ initAnimations }, { initInteractions }] = await Promise.all([
        import('../scripts/animations'),
        import('../scripts/interactions'),
      ]);
      initAnimations();
      initInteractions();
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', boot);
    } else {
      boot();
    }
  </script>
</body>
</html>
